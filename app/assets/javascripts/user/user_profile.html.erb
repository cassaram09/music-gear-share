<form ng-submit="ctrl.editUser()">
  <label for="email">Email:</label>
  <input ng-model="ctrl.user.email" type="email" name="email"></input><br/>
  <label for="password">Password:</label>
  <input ng-model="ctrl.user.password" type="password" name="password"></input><br/>
  <label for="password_confirmation">Confirm Password:</label>
  <input ng-model="ctrl.user.password_confirmation" type="password" name="password_confirmation"></input><br/>
  <label for="current_password">Current Password:</label>
  <input ng-model="ctrl.user.current_password" type="password" name="curent_password" required></input><br/>
  <input type="submit" class="btn btn-md btn-primary" value="Edit Profile">
</form>